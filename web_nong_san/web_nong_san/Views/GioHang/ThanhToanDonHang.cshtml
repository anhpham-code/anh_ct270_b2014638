                var submitUrl = "/GioHang/ThemDon";

                // Thực hiện yêu cầu AJAX để gửi dữ liệu
                axios.post(submitUrl, formData)
                    .then(function (response) {
                        // Xử lý phản hồi nếu cần
                        console.log(response.data);
                    })
                    .catch(function (error) {
                        // Xử lý lỗi
                        console.error(error);
                    });*/
            }
        });
    </script>
</body>
</html>
